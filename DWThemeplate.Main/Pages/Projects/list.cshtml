@page
@model DWThemeplate.Pages.Projects.listModel
@{
}

<h1> Yoo u can search my Projectss</h1>

<form method="GET">
    <div class="from-group">
        <div class="input-group">
            <input type="search" class="from-control" value="" name="searchTerm" />
            <span class="input-group-brtn">
                <button class="btn btn-default">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table>
    @foreach (var item in @Model.Projects)
    {
        <thead>

            <tr>
                <th>@item.ProjectsName</th>
            <tr>

            <tr>
                <th>

                    @foreach (var languages in item.Language)
                    {
                        <a>
                            @languages
                        </a>
                    }

                </th>
            </tr>

            <tr>
                <th>@item.About</th>
            </tr>

            <tr>
                <th>
                    <a class="btn btn-lg"
                       style="background-color: blue;"
                       href="/Projects/details/@item.Id">
                        <i class="glyphicon glyphicon-zoom-in"></i>
                    </a>

                    <a class="btn btn-lg"
                       style="background-color: yellow;"
                       href="/Projects/edit/@item.Id">
                        <i class="glyphicon glyphicon-zoom-in"></i>
                    </a>

                </th>
            </tr>

        </thead>
    }
</table>
